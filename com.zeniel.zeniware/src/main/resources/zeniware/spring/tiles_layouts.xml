<tiles-definitions>

	<!-- Left 고정 레이아웃 -->
	<definition name="main_layout" template="/WEB-INF/layout/main_layout.jsp">
		<put-attribute name="header"  value="/WEB-INF/views/common_tiles/header.jsp" />
		<put-attribute name="top"  value="/WEB-INF/views/common_tiles/topForm.jsp" />
		<put-attribute name="leftFm" value="/WEB-INF/views/common_tiles/leftForm.jsp" />
		<put-attribute name="body" value="" />
	</definition>
	
	<definition name="/mainLayout/*" extends="main_layout">
		<put-attribute name="body"  value="/WEB-INF/views/{1}.jsp" />
	</definition>
	<definition name="/mainLayout/*/*" extends="main_layout">
		<put-attribute name="body"  value="/WEB-INF/views/{1}/{2}.jsp" />
	</definition>
	<definition name="/mainLayout/*/*/*" extends="main_layout">
		<put-attribute name="body"  value="/WEB-INF/views/{1}/{2}/{3}.jsp" />
	</definition>
	
	
	<!-- 일정관리 레이아웃 -->
	<definition name="schedule_layout" template="/WEB-INF/layout/schedule_layout.jsp">
		<put-attribute name="header"  value="/WEB-INF/views/common_tiles/header.jsp" />
		<put-attribute name="top"  value="/WEB-INF/views/common_tiles/topForm.jsp" />
		<put-attribute name="leftFm" value="" />
		<put-attribute name="body" value="" />
	</definition>
	
	<definition name="schedule_layout2" template="/WEB-INF/layout/schedule_layout.jsp">
		<put-attribute name="header"  value="/WEB-INF/views/common_tiles/header.jsp" />
		<put-attribute name="top"  value="/WEB-INF/views/common_tiles/topForm.jsp" />
		<put-attribute name="leftFm" value="/WEB-INF/views/schedule/left_schedule.jsp" />
		<put-attribute name="body" value="" />
	</definition>
	
	<definition name="/scheduleLayout/*/*" extends="schedule_layout">
		<put-attribute name="leftFm" value="/WEB-INF/views/{1}/left_{1}.jsp" />
		<put-attribute name="body"  value="/WEB-INF/views/{1}/{2}.jsp" />
	</definition>
	
	<definition name="/scheduleLayout2/*/*" extends="schedule_layout2">
		<put-attribute name="body"  value="/WEB-INF/views/{1}/{2}.jsp" />
	</definition>
	
	<!-- Admin 선언 -->
	<definition name="zeniware_admin" template="/WEB-INF/layout/admin_layout.jsp">
		<put-attribute name="header"  value="/WEB-INF/views/common_tiles/header.jsp" />
		<put-attribute name="top"  value="/WEB-INF/views/common_tiles/admin_topForm.jsp" />
		<put-attribute name="leftFm" value="" />
		<put-attribute name="body" value="" />
	</definition>

	<!-- Admin 구분 Tiles 호출 -->
	<definition name="/adminType/*/*" extends="zeniware_admin">
		<put-attribute name="leftFm"  value="/WEB-INF/views/adminware/common/admleft_{1}.jsp" />
		<put-attribute name="body"  value="/WEB-INF/views/adminware/{1}/{2}.jsp" />
	</definition>
	
