<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="admin.codeman">

	<resultMap type="zeniware.admin.codeman.vo.CommonGroup" id="commonGroupResultMap">
		<id column="CODE_ID" property="groupId" />
		<result column="CODE_NM_KO" property="groupName" />
	</resultMap>

	<resultMap type="zeniware.admin.codeman.vo.CommonCode" id="commonCodeResultMap">
		<id column="GROUP_ID" property="groupId" />
		<id column="CODE_ID" property="codeId" />
 		<result column="CODE_NM_KO" property="codeNameKo" />
		<result column="CODE_NM_EN" property="codeNameEn" />
		<result column="CODE_NM_ZH" property="codeNameZh" />
		<result column="CODE_NM_JA" property="codeNameJa" />
		<result column="SORT_ORDER" property="sortOrder" />
		<result column="USE_YN" property="useYn" />
		<result column="DESCRIPTION" property="description" />
		<result column="REG_DATE" property="regDate" javaType="java.sql.Date" />
		<result column="MOD_DATE" property="modDate" javaType="java.sql.Date" />
	</resultMap>
	
	<select id="getGroupList" parameterType="map" resultMap="commonGroupResultMap">
		CALL UP_CODEMAN_GROUP_LIST();
	</select>
	
	<select id="getCodeList" parameterType="map" resultMap="commonCodeResultMap">
		CALL UP_CODEMAN_CODE_LIST(#{groupId});
	</select>
	
	<select id="getSingleCode" parameterType="map" resultMap="commonCodeResultMap">
		CALL UP_CODEMAN_SINGLE_CODE(#{groupId}, #{codeId});
	</select>
	
	<select id="getSingleCodeExists" parameterType="map" resultType="int">
		CALL UP_CODEMAN_SINGLE_CODE_EXISTS(#{groupId}, #{codeId});
	</select>
	
	<insert id="insertSingleCode" parameterType="map">
		CALL UP_CODEMAN_SINGLE_CODE_INSERT(
			#{groupId}, #{codeId}, #{codeNameKo}, #{codeNameEn}, #{codeNameZh}, #{codeNameJa}, 
			#{sortOrder}, #{useYn}, #{description}
		);
	</insert>
	
	<update id="updateSingleCode" parameterType="map">
		CALL UP_CODEMAN_SINGLE_CODE_UPDATE(
			#{groupId}, #{codeId}, #{orgCodeId}, #{codeNameKo}, #{codeNameEn}, #{codeNameZh}, #{codeNameJa}, 
			#{sortOrder}, #{useYn}, #{description} 
		);
	</update>
		
	<delete id="deleteSingleCode" parameterType="map">
		CALL UP_CODEMAN_SINGLE_CODE_DELETE(#{groupId}, #{codeId});
	</delete>

</mapper>