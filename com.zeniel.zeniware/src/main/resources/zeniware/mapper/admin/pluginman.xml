<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="admin.pluginman">

	<resultMap id="sboxResultMap" type="zeniware.admin.pluginman.vo.SelectOption">
		<id column="ID" property="id" />
		<result column="TEXT" property="text" />
	</resultMap>
	
	<resultMap id="treeNodeResultMap" type="zeniware.admin.pluginman.vo.TreeNode">
		<id column="ID" property="id" />
		<result column="PARENT" property="parent" />
		<result column="TEXT" property="text" />
		<result column="ICON" property="icon" />
		<result column="CHILDREN" property="children" />
	</resultMap>
	
	<select id="getSboxCodeList" parameterType="map" resultMap="sboxResultMap">
		CALL UP_PLUGINMAN_SBOX_CODE_LIST(#{groupId}, #{langCode});
	</select>
	
	<select id="getNodeListRecursive" parameterType="map" resultMap="treeNodeResultMap">
		CALL UP_PLUGINMAN_NODE_LIST_RECURSIVE(#{compId});
	</select>
	
	<select id="getNodeListSearch" parameterType="map" resultMap="treeNodeResultMap">
		CALL UP_PLUGINMAN_NODE_LIST_SEARCH(#{compId}, #{keyword});
	</select>
	
	<select id="getNodeListDeferred" parameterType="map" resultMap="treeNodeResultMap">
		CALL UP_PLUGINMAN_NODE_LIST_DEFERRED(#{compId}, #{deptId}, #{nodeType});
	</select>
	
</mapper>